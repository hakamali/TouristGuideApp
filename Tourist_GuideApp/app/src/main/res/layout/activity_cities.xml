<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Cities">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_margin="5dp"
            android:layout_marginTop="10dp"

            android:background="#a4031f"
            android:orientation="vertical"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="230sp"
                android:background="@drawable/sahiwal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_sahiwal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Sahiwal"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/gujraat"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_gujrat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gujraat"
                    android:textColor="#ffffff"

                    android:textSize="20sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/islamabad"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_islambad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Islamabad"
                    android:textColor="#ffffff"

                    android:textSize="20sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/peshawar"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_peshawar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Peshawar"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/multan"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_multan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Multan"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/lahore"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_lahore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lahore"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>